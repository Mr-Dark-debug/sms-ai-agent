# SMS AI Agent Environment Variables
# ===================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!

# ===========================================
# LLM Provider Configuration
# ===========================================

# OpenRouter API Key (required for OpenRouter provider)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your-api-key-here

# Alternative: Use this variable name
# SMS_AGENT_LLM_API_KEY=your-api-key-here

# Ollama API Key (optional, Ollama doesn't require keys by default)
# OLLAMA_API_KEY=

# ===========================================
# LLM Settings (optional, overrides config.yaml)
# ===========================================

# Provider: openrouter or ollama
# SMS_AGENT_LLM_PROVIDER=openrouter

# Model to use
# SMS_AGENT_LLM_MODEL=meta-llama/llama-3.3-70b-instruct:free

# Temperature (0.0 - 2.0)
# SMS_AGENT_LLM_TEMPERATURE=0.7

# Max tokens
# SMS_AGENT_LLM_MAX_TOKENS=150

# ===========================================
# SMS Settings
# ===========================================

# Enable/disable auto-reply
# SMS_AGENT_SMS_AUTO_REPLY_ENABLED=true

# Enable/disable AI mode
# SMS_AGENT_SMS_AI_MODE_ENABLED=true

# ===========================================
# UI Settings
# ===========================================

# Web UI host
# SMS_AGENT_UI_WEB_HOST=127.0.0.1

# Web UI port
# SMS_AGENT_UI_WEB_PORT=8080

# ===========================================
# Rate Limiting
# ===========================================

# Messages per minute
# SMS_AGENT_RATE_LIMIT_MAX_MESSAGES_PER_MINUTE=10

# ===========================================
# Configuration Paths (optional)
# ===========================================

# Custom config directory
# SMS_AGENT_CONFIG_DIR=~/.config/sms-ai-agent

# Custom data directory
# SMS_AGENT_DATA_DIR=~/.local/share/sms-ai-agent
